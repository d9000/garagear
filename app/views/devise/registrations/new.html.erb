
<div class="row">
	<div class="col-md-5 col-md-offset-3">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Registro de usuario</h3>
			</div>
			<div class="panel-body">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  			
  			<%= devise_error_messages! %>

				<fieldset>
					<div class="form-group">

						<%= f.email_field :email, :autofocus => true, :placeholder => 'E-mail', :class => 'form-control' %>

					</div>
					<div class="form-group">

						<%= f.password_field :password, :placeholder => 'Contraseña', :class => 'form-control' %>

					</div>
					<div class="form-group">
						<%= f.password_field :password_confirmation, :placeholder => 'Repetir contraseña', :class => 'form-control' %>
					</div>
					<!-- Change this to a button or input when using this as a form -->
					<div class="row">
						<div class="col-md-5">
						<!-- Change this to a button or input when using this as a form -->
							<%= f.submit "Registrarse", :class => 'btn btn-lg btn-primary' %>
						</div>
						<div class="col-md-7">
							<%= render "devise/shared/links" %>
						</div>	
					</div>
					
					
					
					
				</fieldset>
				<% end %>

			</div>
		</div>

		<%= render "devise/shared/links_oauth" %>
	</div>
</div>



