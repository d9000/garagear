<!-- /.panel-heading -->
<div class="panel-body">
	
	<ul class="timeline">
	<% veh.servs.order('created_at DESC').each_with_index do |s, i|%>
		<%if i.odd?%>
			<li class="timeline-inverted">
		<%else%>
			<li>
		<%end%>	
			<div class="timeline-badge warning">
				<i class="fa fa-wrench"></i>
			</div>
			<div class="timeline-panel">
				<div class="timeline-heading">
					<p class="pull-right">
					<small class="text-muted">
							<span class="label label-info">
								<abbr class="timeago" title="<%= s.created_at.getutc.iso8601 %>">
  									<%= s.created_at.to_s %>
								</abbr>
							</span>	
					</small>
					</p>
					<h3 class="timeline-title"><%=s.tiposerv.descripcion%></h3>
					
				</div>
				<div class="timeline-body">
					<p>
						<%=s.descripcion%>
					</p>
					<p>
						<small>
							Odometro: <span class="label label-black"><%=s.kilometros.to_s%> kms</span> 
						</small>
					</p>
					<p>
						<small>
							Costo Insumos/Repuestos: <span class="label label-default">$ <%=s.costorepuestos.to_s%></span>
						</small>
					</p>
					<p>
						<small>
							Costo de mano de obra: <span class="label label-default">$ <%=s.costo.to_s%></span>
						</small>
					</p>
					<hr>
					<div class="btn-group">
						<button type="button" class="btn btn-danger btn-sm dropdown-toggle" data-toggle="dropdown">
							<i class="fa fa-cog"></i>
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" role="menu">
							<li>
								<%= link_to s do%>
								
									<i class="fa fa-eye"></i> Ver detalle
								
								<%end%>
							</li>
							<li>
								<%= link_to edit_serv_path(s) do%>
									<i class="fa fa-edit"></i> Editar
								<%end%>
							</li>
							<li>
								<a href="#"><i class="fa fa-users"></i> Compartir...</a>
							</li>
							<li class="divider"></li>
							<li>
								<a href="#">
								<%= link_to s, :data => { :confirm => "Esta seguro que desea eliminar el servicio del vehÃ­culo de forma permanente?" }, :method => :delete do %>
									<i class="fa fa-trash-o"></i> Eliminar...
								<%end%>							
							</li>
						</ul>
					</div>
				</div>
			</div>
		</li>
	<%end%>
		
	</ul>
</div>
<!-- /.panel-body -->
<script>
	jQuery(document).ready(function() {
  		jQuery("abbr.timeago").timeago();
	});
</script>
