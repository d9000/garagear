<% if @vehs.any? %>
<h1 class="page-header">Mis vehículos    <%= link_to new_veh_path, :class => 'btn btn-info' do%> <i class="fa fa-truck"></i> Registrar un nuevo vehículo!
<%end%> </h1>

<ul class="nav nav-tabs">
	<% @vehs.each_with_index do |veh, i| %>
	<% if i == 0 %>
	<li class="active">
		<%else%>
	<li>
		<%end%>
		<a href="#<%= veh.dominio %>" data-toggle="tab"><%= veh.dominio %></a>
	</li>

	<%end%>
</ul>

<!-- Tab panes -->
<div class="tab-content">
	<% @vehs.each_with_index do |veh, i| %>
	<% if i == 0 %>
	<div class="tab-pane fade in active" id="<%= veh.dominio %>">
		<%else%>
		<div class="tab-pane fade" id="<%= veh.dominio %>">
			<%end%>

			<p>
				<div class="pull-right">
					<%= link_to veh, :data => { :confirm => "Esta seguro que desea eliminar su vehiculo de forma permanente?", :placement => 'top', :toggle => 'tooltip'}, :title => 'Remover el vehículo de forma parmanente', :method => :delete, :class => 'btn btn-danger btn-xs' do%>
					<i class="fa fa-trash-o"></i> Eliminar
					<%end%>

					<div class="btn-group">
						<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
							Acciones
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu pull-right" role="menu">
							<li>
								<%= link_to veh do%>
								
									<i class="fa fa-eye"></i> Ver detalle
								
								<%end%>
							</li>
							<li>
								<a href="#"><i class="fa fa-users"></i> Compartir...</a>
							</li>
							<li>
								<a href="#">Something else here</a>
							</li>
							<li class="divider"></li>
							<li>
								<a href="#">Separated link</a>
							</li>
						</ul>
					</div>
				</div>

				<%= render 'garage_ar/shared/veh_brand', :veh => veh %>
		</div>

		<%end%>

	</div>
	<%else%>
	<%= render 'garage_ar/shared/vehs_empty'%>
	<%end%>
	<!--si no tiene un vehiculo-->

