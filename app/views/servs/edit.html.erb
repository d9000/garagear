<div class="panel panel-primary">
	<div class="panel-heading">
		Registre un servicio para: <%= @serv.veh.dominio%>
	</div>
	<div class="panel-body">
		<p>
			<%= form_for @serv do |f|%>
			<div class="form-group">
				<h1> <%= @serv.tiposerv.descripcion %> </h1>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-12">
						<%= f.label "Descripción del servicio realizado:" %>
						<%= f.text_area :descripcion, :autofocus => true, :class => 'form-control', :placeholder => 'Complete con la descripción del servicio realizado...', :rows => 6 %>
						<p class="help-block">
							Puede registrar el nivel de detalle que usted desea.
						</p>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-6">
						<%= f.label "Kilometraje:" %>
						<%= f.text_field :kilometros, :class => 'form-control', :placeholder => '0000000' %>
						<p class="help-block">
							Es importante completar con exactitud el valor del odometro del vehiculo en el momento de realización del servicio, esto será util para determinar cuando deberá realizar el próximo servicio.
						</p>
					</div>
					<div class="col-md-6">

						<%= f.label "Fecha de realización:" %>
						<%= f.text_field :fecha, :class => 'form-control', :data => {:behaviour => 'datepicker'}  %>
						<p class="help-block">
							Completar con la fecha de realización del servicio.
						</p>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-6">
						<%= f.label "Costo insumos/repuestos:" %>
						<%= f.text_field :costorepuestos, :class => 'form-control', :placeholder => '00000.00' %>
						<p class="help-block">
							Si desea llevar registro del costo, complete el campo.
						</p>
					</div>
					<div class="col-md-6">
						<%= f.label "Costo mano de obra:" %>
						<%= f.text_field :costo, :class => 'form-control', :placeholder => '00000.00' %>
						<p class="help-block">
							Si desea llevar registro del costo, complete el campo.
						</p>
					</div>
				</div>
			</div>
			<div class="col-md-12">
				<%= f.submit "Guardar", :class => "btn btn-primary" %> <%= link_to "Cancelar", root_path, :class => 'btn btn-link' %>

				<%end%>
			</div>
		</p>
	</div>

</div>
<script>
	$(document).ready(function() {
	$('[data-behaviour~=datepicker]').datepicker({
	format:"dd/mm/yyyy",todayBtn:"linked",language:"es",autoclose:true
	});
	})
</script>
