<div class="panel panel-default">
                        <div class="panel-heading">
                            Elija la marca de su vehículo: 
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                	<ul class="breadcrumb" style="margin-bottom: 5px;">
						                <li >Dominio: <%=@veh.dominio%></li>
						                <li class="active">Marca</li>
						                <li>Modelo</li>
						                <li>Año</li>
						                <li>Versión</li>
              						</ul>
                                    <%= form_for @veh, url: wizard_path, :method => :put do |f|%>
  										
                                        <div class="form-group">
                                            <%= f.label "Seleccione la marca de su vehículo:" %>
                                            
                                            	<%= select 'veh', 'marca_id', options_from_collection_for_select(Marca.all, :id, :descripcion, @veh.marca_id),{:prompt => 'Selecione una marca'},{:class => 'form-control'} %>
                                           	
                                            <p class="help-block">Text de ayuda</p>
                                        </div>
                                        <%= f.submit "Continuar", :class => "btn btn-primary" %> <%= link_to "Cancelar", root_path, :class => 'btn btn-link' %>
                                        <%= link_to users_path, :class => 'btn btn-danger' do%>
                                                    <i class="fa fa-chevron-left"></i> Cancelar
                                                 <%end%>										
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
