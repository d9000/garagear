<div class="panel panel-default">
                        <div class="panel-heading">
                            Elija el modelo de su vehículo: 
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                	<ul class="breadcrumb" style="margin-bottom: 5px;">
						                <li >Dominio: <%=@veh.dominio%></li>
						                <li >
						                	<%= link_to previous_wizard_path do%>
						                	<%= Marca.find(@veh.marca_id).descripcion%>
						                	<%end%>
						                </li>
						                <li class="active">Modelo</li>
						                <li>Año</li>
						                <li>Versión</li>
              						</ul>
                                    <%= form_for @veh, :url => wizard_path, :method => :put do |f|%>
  										
                                        <div class="form-group">
                                            <label>Seleccione el modelo de su vehículo de marca <%=Marca.find(@veh.marca_id).descripcion%>:</label>
                                            
                                            	<%= select 'veh', 'modelo_id', options_from_collection_for_select(Modelo.where(marca_id: @veh.marca_id), :id, :descripcion, @veh.marca_id),{:prompt => 'Selecione un modelo'},{:class => 'form-control'} %>
                                           	
                                            <p class="help-block">Text de ayuda</p>
                                        </div>
                                        <%= f.submit "Continuar", :class => "btn btn-primary" %> <%= link_to "Cancelar", root_path, :class => 'btn btn-link' %>
                                        										
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
